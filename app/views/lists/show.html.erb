 <div class="container m-5">
  <h1 class="text-center">Show</h1>

  <p class="text-center"><%= @list.name %> bookmarks</p>

  <div class='row text-center'>
    <div class="col-8">
      <% @list.bookmarks.each do |b| %>
        <div class='col-4'> <%= b.comment %></div>
        <div class='col-4'> <%= b.movie.title %></div>
        <div class='col-4'> <%= b.movie.rating %></div>
        <img src="<%= b.movie.poster_url %>" alt="">
      <% end %>
    </div>
  </div>

  <p> <%= link_to 'New Bookmark', new_list_bookmark_path(@list), class:'bt btn-primary m4' %></p>
