 <div class="container m-5">
  <div class="xml">
    <div class = "ok" style = "margin-bot : 500px;">
      <%= link_to "My lists", lists_path, class: "Button Yellow" %>
      <%= link_to "New list", new_list_path, class: "Button Red" %>
      <%= link_to "New Bookmark", new_list_bookmark_path(@list),  class: "Button" %>
    </div>
    <div class="x d-flex justify-content-around">
<%= link_to "Delete List", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this list ?"}, class: "btn btn-primary" %>

      <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this film from your list ?"}, class: "Button Red" %>
          <img class="image-card" width="20px" src="<%= movie.poster_url %>" class="card-img-top" alt="..."> <h1 class="polux"> </h1>

        </div>
      <% end %>
    </div>
  </div>
