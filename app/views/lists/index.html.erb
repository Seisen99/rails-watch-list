<div class="xml">
  <div class = "ok" style = "margin-bot : 500px;">
    <%= link_to "My lists", lists_path, class: "Button Yellow" %>
    <%= link_to "New list", new_list_path, class: "Button Red" %>
  </div>
  <div class="x d-flex justify-content-around">
    <% @lists.each do |list| %>
      <div class="card ">

        <img class="image-card" src="<%= list.movies.first.poster_url %>" class="card-img-top" alt="..."> <h1 class="polux"><%= list.name %></h1>
        <div class="card-body">
          <div class="link">

            <%= link_to list.name, list_path(list), class: "Button" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
